<div class="row">
  <div class="col-md-12">
    <h1>Hi there <%= current_user.email %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h3>Your current to do items are:</h3>
    <br>
    <ul>
      <% @items.each do |item| %>
        <% if item.completed == false %>
          <li><h4> <%= item.name %> <%= link_to "", item, method: :put, class: 'glyphicon glyphicon-ok pull-right' %></h4></li>
          <%= distance_of_time_in_words(Time.now, item.created_at + 7.days, include_seconds: true) %> left to complete task
        <% end %>
    <% end %>
    </ul>
  </div>
  <div class="col-md-6 pull-right">
    <%= render 'items/form', item: @item %>

    <h3>Previously completed items</h3>
    <br>
    <ul>
      <% @items.each do |item| %>
        <% if item.completed == true %>
          <li><h4> <%= item.name %> </h4></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>