<h1>New Item</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for [@item, item] do |f| %>
      <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(item.errors.count, "error") %>.</h4>
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
      <%= form_group_tag(item.errors[:name]) do %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter item name" %>
      <% end %>
      <div class="form-groupt">
        <%= f.submit "Add Item", class: 'btn btn-success btn-block' %>
      </div>
    <% end %>
  </div>
</div>